@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <a asp-page="/PerfilCliente">Perfil Cliente</a>
</div>

<ul>
    @foreach (var feira in IndexModel.feiras)
    {
        <li>
            <h2>@feira.nomeFeira</h2>
            <button onclick="location.href='/Feira/@feira.nomeFeira'">Feira</button>
        </li>
    }
</ul>