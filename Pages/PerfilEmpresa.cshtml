@page
@model EZFair.Pages.PerfilEmpresaModel
@{
    ViewData["Title"] = "Empresa";
}


<div class="user-profile">
    <img src="~/images/empresa.png" alt="profile picture">
    <div class="profile-info">
        <h2>@Model.nome</h2>
        <p><i class="fa fa-envelope"></i> @Model.email</p>
        @*<p><i class="fa fa-user"></i> @Model.email</p>*@
    </div>
</div>

<hi>Feiras</hi>
<ul>
    @foreach (var feira in PerfilEmpresaModel.feiras)
    {
        <li>
            <h2>@feira.nomeFeira</h2>
            <button onclick="location.href='/Feira/@feira.nomeFeira'">Feira</button>
        </li>
    }
</ul>

<style>
    body {
        background-color: #121212;
    }

    .user-profile {
        display: flex;
        align-items: center;
        background-color: #EBEBEB;
        padding: 20px;
        margin-top: 50px;
        border: 2.5px solid white;
    }

    .user-profile img {
        width: 120px;
        height: 100px;
        /*border-radius: 50%;*/
        margin-right: 20px;
    }

    .profile-info p {
        margin: 10px 0;
    }
</style>