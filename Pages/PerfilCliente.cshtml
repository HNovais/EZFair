@page
@model EZFair.Pages.PerfilClienteModel
@{
    ViewData["Title"] = "Cliente";
}

<div class="user-profile">
    <img src="~/images/profile.png" alt="profile picture">
    <div class="profile-info">
        <h2>@Model.nome</h2>
        <p><i class="fa fa-envelope"></i> @Model.email</p>
        <p><i class="fa fa-user"></i> @Model.username</p>
        <p><i class="fa fa-phone"></i> @Model.phonenumber</p>
    </div>
</div>

<style>
    .user-profile {
        display: flex;
        align-items: center;
        background-color: #F5F5F5;
        padding: 20px;
    }

    .user-profile img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-right: 20px;
    }

    .profile-info p {
        margin: 10px 0;
    }
</style>
