    <header style="background-color: #292929; color: #EBEBEB">
        <div id="container">
            <a href="@Url.Content("~/")" class="btn btn-primary">
                <img src="~/Images/logo.png" alt="Homepage" title="Homepage" class="ezfair" border="0" style="height: 90px; float: left; margin-left: 40px; margin-right: 40px;">
            </a>
            <div id="searchbar">
                <input type="text" class="searchterm" placeholder="Pesquisar feira">
                <img src="~/Images/search.png" alt="Search" class="searchicon">
            </div>
            <div id="account">
                <a href="@Url.Content("~/ChooseLogin")" class="btn btn-primary">
                    <img src="~/Images/account.png" class="account" style="width: 50px; height: 50px; margin-left: 40px; margin-right: 40px;">
                </a>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #292929; color: #EBEBEB">
